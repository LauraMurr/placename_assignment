{{#if isAuthenticated}}
  {{> menu active="/"}}
{{else}}
  {{> welcome-menu active="/"}}
{{/if}}

<div class="columns is-multiline">
  {{#each setLocations}}
  <div class="column is-6">
    <div class="card">
      <div class="card-image">
        <figure class="image is-3by2">
          <p>Image Path: {{this.imagePath}}</p>
          <img src="/public/{{this.imagePath}}" alt="{{this.title}}">
        </figure>
      </div>
      <div class="card-content">
        <div class="content has-text-centered location-title">
          <a href="/public/location/{{_id}}/publiclocationdetails">{{title}}</a> 
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>