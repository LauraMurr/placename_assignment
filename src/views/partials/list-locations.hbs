<div class="columns is-multiline">
  {{#each locations}}
    <div class="column is-6">
      <div class="card">
        <div class="card-image">
          <figure class="image is-3by2">
            <img src="/public/{{this.imagePath}}" alt="{{this.title}}">
          </figure>
        </div>
        <div class="card-content">
          <div class="content has-text-centered major-mono-display-regular location-title">
            <a href="/location/{{_id}}/locationdetails">{{title}}</a>
          </div>
          <div class="buttons is-centered">
            <a href="/location/{{_id}}/locationdetails" class="button">
              <span class="icon is-small is-title-grey">
                <i class="fas fa-folder-open"></i>
              </span>
              <span>Add Details</span>
            </a>
            <a href="/public/location/{{_id}}/publiclocationdetails" class="button">
              <span class="icon is-small">
                <i class="fas fa-folder-open"></i>
              </span>
              <span>View Details</span>
            </a>
            <a href="/dashboard/deletelocation/{{_id}}" class="button">
              <span class="icon is-small">
                <i class="fas fa-trash"></i>
              </span>
              <span>Delete</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>


