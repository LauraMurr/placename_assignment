{{#if isAuthenticated}}
<div class="container">
  <h3 class="title is-my-green review-title">Add a Review</h3>
  <form action="/location/{{location._id}}/addreview" method="POST">
    <div class="field">
      <div class="control">
        <input class="input" type="text" name="title" placeholder="Review title" required>
      </div>
    </div>
    <div class="field">
      <label class="label">Rating</label>
      <div class="control">
        <div class="select">
          <select name="rating">
            <option value="5">5 - Excellent</option>
            <option value="4">4 - Very Good</option>
            <option value="3">3 - Good</option>
            <option value="2">2 - Fair</option>
            <option value="1">1 - Poor</option>
          </select>
        </div>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <textarea class="textarea" name="content" placeholder="Write your review" required></textarea>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <button class="button" type="submit">Submit Review</button>
      </div>
    </div>
  </form>
</div>
{{/if}}
